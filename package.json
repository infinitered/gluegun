{
  "name": "gluegun",
  "version": "2.0.0-beta.10",
  "description": "Build yourself a pluggable CLI.",
  "repository": "infinitered/gluegun",
  "bin": {
    "gluegun": "bin/gluegun"
  },
  "main": "build/index.js",
  "types": "build/types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --write \"**/*.ts\" --loglevel error && tslint -p . --fix",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p . > /dev/null",
    "copy-templates": "cp -a ./src/cli/templates ./build/cli/",
    "clean-types": "find ./build/types -type f -size 0 -delete && find ./build/types -type d -empty -delete",
    "build": "yarn format && yarn clean-build && yarn compile && yarn copy-templates && yarn clean-types",
    "lint": "tslint -p .",
    "integration": "yarn build && jest --config=./jest-integration.config.json ",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "ci": "yarn test && yarn integration",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text jest",
    "coveralls": "nyc jest && nyc report --reporter=text-lcov | coveralls",
    "shipit": "yarn build && yarn lint && np --yolo --no-yarn"
  },
  "author": {
    "name": "Infinite Red, Inc.",
    "email": "npm@infinite.red",
    "url": "https://github.com/infinitered/gluegun"
  },
  "files": [
    "docs",
    "bin",
    "build",
    "sniff.js",
    "sniff-async.js",
    "toolbox.js",
    "filesystem.js",
    "strings.js",
    "print.js",
    "system.js",
    "semver.js",
    "http.js",
    "patching.js",
    "prompt.js",
    "LICENSE",
    "readme.md"
  ],
  "license": "MIT",
  "dependencies": {
    "apisauce": "0.14.3",
    "app-module-path": "^2.2.0",
    "cli-table2": "^0.2.0",
    "colors": "1.2.4",
    "cosmiconfig": "^4.0.0",
    "cross-spawn": "^6.0.4",
    "ejs": "^2.5.7",
    "enquirer": "^1.0.3",
    "execa": "^0.9.0",
    "fs-jetpack": "^1.2.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.lowerfirst": "^4.3.1",
    "lodash.pad": "^4.5.1",
    "lodash.padend": "^4.6.1",
    "lodash.padstart": "^4.6.1",
    "lodash.repeat": "^4.1.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "lodash.trim": "^4.5.1",
    "lodash.trimend": "^4.5.1",
    "lodash.trimstart": "^4.5.1",
    "lodash.uppercase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "ora": "^1.4.0",
    "pluralize": "^7.0.0",
    "prompt-autocompletion": "^0.1.1",
    "prompt-checkbox": "^2.2.0",
    "prompt-confirm": "^1.2.0",
    "prompt-expand": "^1.0.0",
    "prompt-list": "^3.1.0",
    "prompt-password": "^1.2.0",
    "prompt-question": "^5.0.2",
    "prompt-radio": "^1.2.1",
    "prompt-rawlist": "^2.0.1",
    "ramda": "^0.25.0",
    "ramdasauce": "^2.1.0",
    "semver": "^5.5.0",
    "which": "^1.2.14",
    "yargs-parser": "^9.0.2"
  },
  "devDependencies": {
    "@types/cli-table2": "^0.2.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "@types/pluralize": "^0.0.28",
    "@types/ramda": "^0.25.24",
    "coveralls": "^3.0.0",
    "expect": "^23.0.0-alpha.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-mock": "^23.0.0-alpha.0",
    "lint-staged": "^6.1.0",
    "np": "^2.19.0",
    "nyc": "^11.2.1",
    "prettier": "^1.10.2",
    "sinon": "^4.2.2",
    "strip-ansi": "^4.0.0",
    "temp-write": "^3.3.0",
    "ts-jest": "^22.4.1",
    "ts-node": "^4.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.7.2",
    "unique-temp-dir": "^1.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
