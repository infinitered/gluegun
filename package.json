{
  "name": "gluegun",
  "version": "2.0.0-alpha.17",
  "description": "Build yourself a pluggable CLI.",
  "repository": "infinitered/gluegun",
  "bin": {
    "gluegun": "bin/gluegun"
  },
  "main": "dist/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --write \"**/*.ts\" && tslint -p . --fix",
    "compile": "tsc -p .",
    "rollup": "rollup -c && cp -a ./build/cli ./dist/",
    "build": "yarn format && yarn compile && cp -a ./src/cli/templates ./build/cli/ && yarn rollup",
    "lint": "tslint -p .",
    "test": "ava-ts",
    "watch": "ava-ts --watch",
    "snapupdate": "ava-ts --update-snapshots",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text ava-ts",
    "coveralls": "nyc ava-ts && nyc report --reporter=text-lcov | coveralls",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "shipit": "yarn build && yarn rollup && yarn lint && np --yolo"
  },
  "author": {
    "name": "Infinite Red, Inc.",
    "email": "npm@infinite.red",
    "url": "https://github.com/infinitered/gluegun"
  },
  "files": [
    "docs",
    "bin",
    "dist",
    "sniff.js",
    "sniff-async.js",
    "LICENSE",
    "readme.md"
  ],
  "license": "MIT",
  "dependencies": {
    "apisauce": "^0.14.1",
    "app-module-path": "^2.2.0",
    "cli-table2": "^0.2.0",
    "colors": "^1.1.2",
    "cosmiconfig": "^3.1.0",
    "cross-spawn": "^5.1.0",
    "ejs": "^2.5.7",
    "enquirer": "^1.0.2",
    "execa": "^0.8.0",
    "fs-jetpack": "^1.2.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.lowerfirst": "^4.3.1",
    "lodash.pad": "^4.5.1",
    "lodash.padend": "^4.6.1",
    "lodash.padstart": "^4.6.1",
    "lodash.repeat": "^4.1.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "lodash.trim": "^4.5.1",
    "lodash.trimend": "^4.5.1",
    "lodash.trimstart": "^4.5.1",
    "lodash.uppercase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "ora": "^1.2.0",
    "pluralize": "^7.0.0",
    "prompt-autocompletion": "^0.1.1",
    "prompt-checkbox": "^2.2.0",
    "prompt-confirm": "^1.2.0",
    "prompt-expand": "^1.0.0",
    "prompt-list": "^3.1.0",
    "prompt-password": "^1.2.0",
    "prompt-question": "^5.0.2",
    "prompt-radio": "^1.2.1",
    "prompt-rawlist": "^2.0.1",
    "ramda": "^0.25.0",
    "ramdasauce": "^2.1.0",
    "semver": "^5.3.0",
    "spawn-sync": "^1.0.15",
    "which": "^1.2.14",
    "yargs-parser": "^8.0.0"
  },
  "devDependencies": {
    "@types/cli-table2": "^0.2.1",
    "@types/node": "^8.5.1",
    "@types/ramda": "^0.25.8",
    "ava": "^0.24.0",
    "ava-ts": "^0.23.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "np": "^2.16.0",
    "nyc": "^11.2.1",
    "prettier": "^1.9.2",
    "rollup": "^0.52.3",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-re": "^1.0.6",
    "rollup-plugin-uglify-es": "^0.0.1",
    "sinon": "^4.0.1",
    "temp-write": "^3.3.0",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  },
  "ava": {},
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
