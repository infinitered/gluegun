{
  "name": "<%= props.name %>",
  "version": "0.0.1",
  "description": "<%= props.name %> CLI",
  "private": true,
  "bin": {
    "<%= props.name %>": "bin/<%= props.name %>"
  },
  "scripts": {
    <% if (props.typescript) { %>
      "format": "prettier --write **/*.{js,ts,tsx,json}",
    <% } else { %>
      "format": "prettier --write **/*.{js,json} && standard --fix",
      "lint": "standard",
    <% } %>
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    <% if (props.typescript) { %>
      "tsconfig.json",
    <% } %>
    "LICENSE",
    "readme.md",
    "docs",
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    <% if (props.typescript) { %>
      "typescript": "3.2.2",
      "ts-node": "^7.0.1",
    <% } -%>
    "gluegun": "next"
  },
  "devDependencies": {
    <% if (props.typescript) { %>
      "@types/node": "^10.12.12",
      "ts-jest": "^23.10.5",
    <% } else { %>
      "standard": "^12.0.1",
      "babel-eslint": "^10.0.1",
    <% } %>
    "prettier": "^1.12.1",
    "jest": "^23.6.0"
  }
  <% if (!props.typescript) { %>,
    "standard": {
      "parser": "babel-eslint"
    }
  <% } %>
}
